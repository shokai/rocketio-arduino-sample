!!! XHTML
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'UTF-8'}
    %title= @title
    %link{:rel => 'stylesheet', :href => "#{app_root}/main.css", :type => 'text/css'}
  %body
    %div#header
    %div#content
      %div#main
        %div
          %div
            %span#rocketio
            %span#netstat
          %div#temp
          %div#light
          %div#cpu
          %div#mem
          %div#websocket
          %div#comet
      %hr
      %div#footer
        %p
          - src_url = 'https://github.com/shokai/rocketio-arduino-sample'
          %a{:href => src_url} #{src_url}
          %span
            (RocketIO v#{Sinatra::RocketIO::VERSION})
    %script{:type => 'text/javascript', :src => '//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'}
    %script{:src => rocketio_js}
    %script{:src => "#{app_root}/js/index.js"}
